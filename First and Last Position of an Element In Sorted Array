#include<iostream>
using namespace std;
 
 int FirstOcc(int arr[],int n,int key){
    int s=0;
    int e=n-1;
    int mid= s+ (e-s)/2;
    int ans=-1;
    while(s<=e){
    if(arr[mid]==key){
        ans=mid;
        e=mid-1;
}
    else if(key>arr[mid]){
        s=mid+1;
    }
  else if(key<arr[mid]){
          e=mid-1;}

        mid= s+ (e-s)/2; }
        return -1;
}

int main(){
    int odd[5]={1,2,4,5,6};
    cout<<"First occurence of 3 is at index:"<<FirstOcc(odd,5,3)<<endl;
    return 0;
}

int main(){
    int odd[5]={1,2,4,5,6};
    cout<<"First occurence of 3 is at index:"<<FirstOcc(odd,5,3)<<endl;
    return 0;
}
